{
  "compilerOptions": {
    "target": "ES2019",                          
    "module": "commonjs",                    
    "lib": ["es6"],                     
    "allowJs": true,
    "outDir": "./dist",                          
    "rootDir": "src",
    "baseUrl": ".",
    "strict": true,         
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "paths": {
      "@/*": ["src/*"],
      "@test/*": ["test/*"]
    } 
  }
}